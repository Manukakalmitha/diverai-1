{
    "manifest_version": 3,
    "name": "Diver AI Companion",
    "version": "1.2",
    "description": "Real-time chart analysis overlay for TradingView.",
    "permissions": [
        "sidePanel",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://www.tradingview.com/*",
        "https://finance.yahoo.com/*",
        "https://*.coingecko.com/*",
        "https://coinmarketcap.com/*",
        "https://*.binance.com/*",
        "https://*.google.com/finance*",
        "https://api.ipify.org/*",
        "https://brrjoheinakfhohesogc.supabase.co/*",
        "https://finnhub.io/*"
    ],
    "externally_connectable": {
        "matches": [
            "https://diveraitrading.web.app/*"
        ]
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Open Diver AI Analysis",
        "default_icon": {
            "16": "icon-16.png",
            "32": "icon-48.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        }
    },
    "icons": {
        "16": "icon-16.png",
        "32": "icon-48.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; worker-src 'self'; connect-src 'self' https://brrjoheinakfhohesogc.supabase.co wss://brrjoheinakfhohesogc.supabase.co https://api.ipify.org https://api.coingecko.com https://query1.finance.yahoo.com https://finnhub.io"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "vendor/tesseract/*",
                "logo-text.png",
                "assets/*",
                "icons/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.tradingview.com/chart/*",
                "https://finance.yahoo.com/*",
                "https://*.coingecko.com/*",
                "https://coinmarketcap.com/*",
                "https://*.binance.com/*",
                "https://*.google.com/finance*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}